                <div class="info-item">
                    <div class="icon-box"><i class="fas fa-phone-alt"></i></div>
                    <div>
                        <h6>Phone</h6>
                        <p>+123 456 7890</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="icon-box"><i class="fas fa-envelope"></i></div>
                    <div>
                        <h6>Email</h6>
                        <p>info@carepoint.com</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="icon-box"><i class="fas fa-map-marker-alt"></i></div>
                    <div>
                        <h6>Location</h6>
                        <p>123 Health Avenue, Wellness City</p>
                    </div>
                </div>

                <div class="social-icons">
                    <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                </div>
            </div>

            <!-- Feedback Form -->
            <div class="col-lg-6 offset-lg-1">
                <div class="feedback-card">
                    <h3 class="mb-4 text-white">Your Feedback Matters</h3>
                    <form method="post" asp-controller="User" asp-action="SubmitFeedback">
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Your Email" required />
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="comment" rows="3" placeholder="Share your thoughts..." required></textarea>
                        </div>

                        <div class="rating-container mb-3">
                            <label class="text-white mb-2 d-block">How did we do?</label>
                            <div class="emoji-rating" id="emojiRating">
                                <span data-value="1">&#128545;</span> <!-- 😡 -->
                                <span data-value="2">&#128542;</span> <!-- 😞 -->
                                <span data-value="3">&#128528;</span> <!-- 😐 -->
                                <span data-value="4">&#128522;</span> <!-- 🙂 -->
                                <span data-value="5">&#128525;</span> <!-- 😍 -->
                            </div>
                            <input type="hidden" name="rating" id="emojiRatingInput" required />
                        </div>

                        <button type="submit" class="btn btn-light w-100">Send Feedback</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const emojiSpans = document.querySelectorAll("#emojiRating span");
        const ratingInput = document.getElementById("emojiRatingInput");

        emojiSpans.forEach(span => {
            span.addEventListener("click", () => {
                const value = span.getAttribute("data-value");
                ratingInput.value = value;

                // Remove previous selections
                emojiSpans.forEach(s => s.classList.remove("selected"));

                // Highlight the selected emoji
                span.classList.add("selected");
            });
        });
    </script>
}
