<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(to right, #007bff, #00c6ff);
        color: white;
        padding: 80px 20px;
        text-align: center;
        border-radius: 0.5rem;
    }

        .hero-section h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .hero-section p {
            font-size: 1.25rem;
            margin-bottom: 1.5rem;
        }

        .hero-section .btn {
            margin-top: 1rem;
        }

    /* Section Styling */
    .section-title {
        font-weight: 700;
        margin-bottom: 30px;
        font-size: 2rem;
        color: #007bff;
    }

    .about-section {
        background-color: #f8f9fa;
        padding: 60px 20px;
        text-align: center;
        border-radius: 10px;
        margin-bottom: 30px;
    }

        .about-section p {
            max-width: 800px;
            margin: 0 auto;
            font-size: 1.25rem;
            color: #555;
        }

    .services-section {
        padding: 60px 0;
    }

    .appointments-section {
        background-color: #f8f9fa;
        padding: 60px 20px;
        text-align: center;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    /* Card Styling */
    .service-card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        border: none;
    }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 123, 255, 0.2);
        }

    .card-img-container {
        height: 200px;
        overflow: hidden;
    }

        .card-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .service-card:hover .card-img-container img {
        transform: scale(1.1);
    }

    .service-card .card-body {
        padding: 1.5rem;
    }

    .service-card .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #007bff;
    }

    .service-card .card-text {
        color: #6c757d;
    }

    /* Contact & Feedback Section */
    .contact-feedback-section {
        background: linear-gradient(to right, #007bff, #00c6ff);
        color: white;
        padding: 60px 20px;
        border-radius: 0.5rem;
    }

    .contact-info {
        padding: 1rem;
    }

    .gradient-text {
        background: linear-gradient(90deg, #ffffff, #cce6ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .info-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1.5rem;
    }

    .icon-box {
        width: 50px;
        height: 50px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(5px);
        border-radius: 12px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.4rem;
        color: white;
        margin-right: 1rem;
        transition: transform 0.3s ease;
    }

        .icon-box:hover {
            transform: scale(1.1);
            background: rgba(255, 255, 255, 0.25);
        }

    .info-item h6 {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .info-item p {
        margin: 0;
    }

    .social-icons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .social-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 50%;
        color: white;
        font-size: 1.2rem;
        transition: background 0.3s, transform 0.3s;
        text-decoration: none;
    }

        .social-link:hover {
            background: rgba(255, 255, 255, 0.4);
            transform: scale(1.1);
            color: #fff;
        }

    /* Feedback Form */
    .feedback-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 2rem;
        height: 100%;
    }

    .feedback-card input,
    .feedback-card textarea {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 10px;
        padding: 12px 15px;
        color: white;
        width: 100%;
        margin-bottom: 1rem;
    }

     .feedback-card input::placeholder,
     .feedback-card textarea::placeholder {
         color: #f0f0f0;
     }

     .feedback-card input:focus,
     .feedback-card textarea:focus {
         outline: none;
         background: rgba(255, 255, 255, 0.3);
         color: white;
     }

    .rating-container {
        margin-bottom: 20px;
    }

    
    .emoji-rating {
        font-size: 2rem;
        cursor: pointer;
        user-select: none;
        display: flex;
        gap: 10px;
        justify-content: start;
    }

        .emoji-rating span {
            transition: transform 0.2s, color 0.2s;
            filter: grayscale(100%);
        }

            .emoji-rating span:hover {
                transform: scale(1.2);
            }

            .emoji-rating span.selected {
                transform: scale(1.4);
                color: gold;
                filter: none;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            }


    /* Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        border: none;
        color: white;
        padding: 10px 25px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #0072ff, #00c6ff);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .btn-light {
        background-color: white;
        color: #007bff;
        border: none;
        padding: 10px 25px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-light:hover {
        background-color: #f8f9fa;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
</style>

