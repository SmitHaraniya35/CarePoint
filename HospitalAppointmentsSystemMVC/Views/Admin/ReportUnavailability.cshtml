@model UnavailabilityViewModel

@{
    ViewData["Title"] = "Report Unavailability";
}

<style>
    .form-group label {
        font-weight: bold;
        font-size: 1rem;
    }

    .form-control {
        border-radius: 0.25rem;
        box-shadow: 0 0 0 0.125rem rgba(220, 53, 69, 0.25);
    }

        .form-control:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.125rem rgba(220, 53, 69, 0.5);
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .card-body {
        padding: 20px;
    }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-90 bg-light">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 700px;">
        <div class="card-body">
            <h2 class="text-center text-danger mb-4">@ViewData["Title"]</h2>
            <hr class="mb-4" />

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="ReportUnavailability" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="UnavailableDate" class="form-label">Unavailable Date</label>
                    <input asp-for="UnavailableDate" class="form-control" type="date" />
                    <span asp-validation-for="UnavailableDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Reason" class="form-label">Reason for Unavailability</label>
                    <textarea asp-for="Reason" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">Submit</button>
                    @* <a asp-action="ViewUnavailability" class="btn btn-secondary">Cancel</a> *@
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
