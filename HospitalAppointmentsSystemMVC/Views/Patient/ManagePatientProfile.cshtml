@model PatientViewModel

@{
    ViewData["Title"] = "Manage Profile";
}

<style>
    .card-header {
    background-color: #007bff;
    color: white;
    font-weight: bold;
    font-size: 1.25rem;
    }

    .form-group label {
    font-weight: bold;
    font-size: 1rem;
    }

    .form-control {
    border-radius: 0.25rem;
    box-shadow: 0 0 0 0.125rem rgba(0, 123, 255, 0.25);
    }

    .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.125rem rgba(0, 123, 255, 0.5);
    }

    .btn-success {
    background-color: #28a745;
    border-color: #28a745;
    }

    .btn-success:hover {
    background-color: #218838;
    border-color: #1e7e34;
    }

    .card-body {
    padding: 20px;
    }

    .form-label {
    font-weight: bold;
    text-transform: uppercase;
    }

    .text-uppercase {
    text-transform: uppercase;
    }

    .fw-bold {
    font-weight: bold;
    }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-90 bg-light">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 700px;">
        <div class="card-body">
            <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>
            <hr class="mb-4" />

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }


            <form asp-action="ManagePatientProfile" method="post">
                <input type="hidden" asp-for="Gender" />
                <input type="hidden" asp-for="DateOfBirth" />

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label text-uppercase fw-bold"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label text-uppercase fw-bold"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ContactNumber" class="form-label text-uppercase fw-bold"></label>
                    <input asp-for="ContactNumber" class="form-control" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>

                <div class="d-flex">
                    <button type="submit" class="btn btn-success px-4">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
