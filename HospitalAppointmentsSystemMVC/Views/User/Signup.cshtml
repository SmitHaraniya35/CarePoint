@model SignupViewModel

@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center min-vh-90 bg-light">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 800px;">
        <div class="card-body">
            <h2 class="text-center text-primary mb-4">Signup</h2>
            <hr class="mb-4" />

            <form asp-action="Signup" method="post">
                @* <div asp-validation-summary="All" class="text-danger mb-3"></div> *@

                <div class="row">
                    <!-- User Info -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="User.Username" class="form-label"></label>
                            <input asp-for="User.Username" class="form-control" placeholder="Enter username" />
                            <span asp-validation-for="User.Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="User.PasswordHash" class="form-label">Password</label>
                            <input asp-for="User.PasswordHash" type="password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="User.Email" class="form-label"></label>
                            <input asp-for="User.Email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Patient Info -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Patient.FullName" class="form-label"></label>
                            <input asp-for="Patient.FullName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="Patient.FullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Patient.Gender" class="form-label"></label>
                            <select asp-for="Patient.Gender" class="form-control">
                                <option value="">Select</option>
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                            <span asp-validation-for="Patient.Gender" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Patient.DateOfBirth" class="form-label"></label>
                            <input asp-for="Patient.DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Patient.ContactNumber" class="form-label"></label>
                            <input asp-for="Patient.ContactNumber" class="form-control" placeholder="Enter contact number" />
                            <span asp-validation-for="Patient.ContactNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-3">
                    <button type="submit" class="btn btn-primary">Create Account</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to Home</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
